{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "jsx": "preserve",

    "allowJs": false,
    "alwaysStrict": true,

    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,

    "strict": true,

    "verbatimModuleSyntax": true
  }
}
